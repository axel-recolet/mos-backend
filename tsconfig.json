{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "auth/*": [
        "src/modules/auth/*"
      ],
      "storages/*": [
        "src/modules/storages/*"
      ],
      "items/*": [
        "src/modules/items/*"
      ],
      "depots/*": [
        "src/modules/depots/*"
      ],
      "users/*": [
        "src/modules/users/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  }
}